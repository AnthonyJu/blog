{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.6.9",
  "scripts": {
    "dev": "vite",
    "build": "vite-ssg build",
    "create:blog": "plop --plopfile ./plop/config.js",
    "lint": "eslint . --ext .ts,.vue",
    "lint:style": "stylelint --fix \"src/**/*.{vue,css,scss}\"",
    "preview": "vite preview",
    "preview-https": "serve dist",
    "typecheck": "vue-tsc --noEmit",
    "up": "taze major -I",
    "postinstall": "npx simple-git-hooks",
    "sizecheck": "npx vite-bundle-visualizer"
  },
  "dependencies": {
    "@unhead/vue": "^1.1.32",
    "@unocss/reset": "^0.53.5",
    "@vueuse/core": "^10.2.1",
    "@vueuse/head": "^1.1.26",
    "element-plus": "^2.3.7",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-demi": "^0.14.5",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@anthony-ju/eslint-config": "^0.1.4",
    "@anthony-ju/stylelint-config": "^0.1.1",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/nprogress": "^0.2.0",
    "@unocss/eslint-config": "^0.53.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "critters": "^0.0.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "https-localhost": "^4.7.1",
    "lint-staged": "^13.2.3",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-shiki": "^0.9.0",
    "plop": "^3.1.2",
    "pnpm": "^8.6.9",
    "sass": "^1.63.6",
    "shiki": "^0.14.3",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.11.2",
    "typescript": "^5.1.6",
    "unocss": "^0.53.5",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-element-plus": "^0.7.2",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.4",
    "vite-plugin-pages": "^0.31.0",
    "vite-plugin-pwa": "^0.16.4",
    "vite-plugin-vue-component-preview": "^1.1.6",
    "vite-plugin-vue-devtools": "^0.5.1",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vite-plugin-vue-markdown": "^0.23.5",
    "vite-ssg": "^0.23.1",
    "vite-ssg-sitemap": "^0.5.1",
    "vue-tsc": "^1.8.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
