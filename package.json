{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.14.0",
  "scripts": {
    "dev": "vite",
    "blog": "plop --plopfile ./plop/blog/config.js",
    "note": "plop --plopfile ./plop/note/config.js",
    "roast": "plop --plopfile ./plop/roast/config.js",
    "lint": "eslint --fix",
    "lint:style": "stylelint --fix \"src/**/*.{vue,scss}\"",
    "typecheck": "vue-tsc --noEmit",
    "build": "vite-ssg build",
    "build:zip": "pnpm run build && pnpm run pack:zip",
    "pack:zip": "rimraf dist.zip && jszip add dist/* -o ./dist.zip",
    "preview": "vite preview",
    "preview-https": "serve dist",
    "up": "taze major -I",
    "postinstall": "npx simple-git-hooks",
    "sizecheck": "npx vite-bundle-visualizer"
  },
  "dependencies": {
    "@unhead/vue": "^1.8.9",
    "@unocss/reset": "^0.58.3",
    "@vueuse/core": "^10.7.1",
    "@vueuse/head": "^2.0.0",
    "axios": "^1.6.4",
    "element-plus": "^2.4.4",
    "nprogress": "^0.2.0",
    "vue": "^3.4.4",
    "vue-demi": "^0.14.6",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.1",
    "@anthony-ju/eslint-config": "^0.2.4",
    "@anthony-ju/stylelint-config": "^0.2.8",
    "@types/markdown-it-link-attributes": "^3.0.4",
    "@types/nprogress": "^0.2.3",
    "@unocss/eslint-config": "^0.58.3",
    "@vitejs/plugin-vue": "^5.0.2",
    "critters": "^0.0.20",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-format": "^0.1.0",
    "https-localhost": "^4.7.1",
    "jszip-cli": "^1.4.24",
    "lint-staged": "^15.2.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-shikiji": "^0.9.17",
    "plop": "^4.0.1",
    "pnpm": "^8.14.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.2",
    "sass": "^1.69.7",
    "shikiji": "^0.9.17",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^16.1.0",
    "taze": "^0.13.1",
    "typescript": "^5.3.3",
    "unocss": "^0.58.3",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-element-plus": "^0.8.0",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-markdown": "^0.25.2",
    "unplugin-vue-router": "^0.7.0",
    "vite": "^5.0.10",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-pages": "^0.32.0",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-vue-devtools": "^7.0.4",
    "vite-plugin-vue-layouts": "^0.11.0",
    "vite-ssg": "^0.23.6",
    "vite-ssg-sitemap": "^0.6.1",
    "vue-tsc": "^1.8.27"
  },
  "resolutions": {
    "bin-wrapper": "npm:bin-wrapper-china"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
