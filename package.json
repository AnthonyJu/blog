{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "scripts": {
    "dev": "vite",
    "build": "vite-ssg build",
    "blog": "plop --plopfile ./plop/blog/config.js",
    "note": "plop --plopfile ./plop/note/config.js",
    "roast": "plop --plopfile ./plop/roast/config.js",
    "lint": "eslint . --ext .ts,.vue",
    "typecheck": "vue-tsc --noEmit",
    "lint:style": "stylelint --fix \"src/**/*.{vue,css,scss}\"",
    "preview": "vite preview",
    "preview-https": "serve dist",
    "up": "taze major -I",
    "postinstall": "npx simple-git-hooks",
    "sizecheck": "npx vite-bundle-visualizer"
  },
  "dependencies": {
    "@unhead/vue": "^1.7.4",
    "@unocss/reset": "^0.56.5",
    "@vueuse/core": "^10.5.0",
    "@vueuse/head": "^2.0.0",
    "axios": "^1.5.1",
    "nprogress": "^0.2.0",
    "vue": "^3.3.4",
    "vue-demi": "^0.14.6",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.0.0-beta.27",
    "@anthony-ju/eslint-config": "^0.2.2",
    "@anthony-ju/stylelint-config": "^0.2.1",
    "@types/markdown-it-link-attributes": "^3.0.2",
    "@types/nprogress": "^0.2.1",
    "@unocss/eslint-config": "^0.56.5",
    "@vitejs/plugin-vue": "^4.4.0",
    "critters": "^0.0.16",
    "cross-env": "^7.0.3",
    "element-plus": "^2.3.7",
    "eslint": "^8.51.0",
    "https-localhost": "^4.7.1",
    "lint-staged": "^14.0.1",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-shikiji": "^0.6.10",
    "plop": "^4.0.0",
    "pnpm": "^8.9.0",
    "sass": "^1.69.3",
    "shikiji": "^0.6.10",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.3",
    "taze": "^0.11.3",
    "typescript": "^5.2.2",
    "unocss": "^0.56.5",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-element-plus": "^0.8.0",
    "unplugin-vue-components": "^0.25.2",
    "unplugin-vue-markdown": "^0.24.3",
    "vite": "^4.4.11",
    "vite-plugin-pages": "^0.31.0",
    "vite-plugin-pwa": "^0.16.5",
    "vite-plugin-vue-devtools": "^1.0.0-rc.5",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vite-ssg": "^0.23.3",
    "vite-ssg-sitemap": "^0.5.1",
    "vue-tsc": "^1.8.19"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
